<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="restCommandFactory" class="com.rest.integration.util.factory.impl.DefaultIFactory">
        <property name="key" value="restCommandFactory"/>
        <property name="map">
            <map>
                <entry>
                    <key><value type="java.lang.Class">com.rest.integration.util.command.rest.MockGetCustomerCommand</value></key>
                    <bean class="com.rest.integration.util.command.rest.impl.DefaultMockGetCustomerCommand" parent="abstractRestCommand"></bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="abstractRestCommand" abstract="true" class="com.rest.integration.util.command.rest.impl.AbstractRestCommand"/>

    <!-- RequestLog Commands -->
    <bean name="saveRequestLogCommandFactory" class="com.rest.integration.util.factory.impl.DefaultIFactory">
        <property name="key" value="saveRequestLogCommandFactory"/>
        <property name="map">
            <map>
                <entry>
                    <key><value type="java.lang.Class">com.rest.integration.util.command.requestlog.impl.DefaultSaveRequestLogCommand</value></key>
                    <bean class="com.rest.integration.util.command.requestlog.impl.DefaultSaveRequestLogCommand" parent="abstractSaveRequestLogCommand"></bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="abstractSaveRequestLogCommand" class="com.rest.integration.util.command.requestlog.impl.AbstractSaveRequestLogCommand" abstract="true"/>
    <!-- RequestLog Commands END -->

</beans>
